<% layout("/layouts/boilerplate") %>
<body>
    <br><br>
        <div class="row">
        <div class="col-8 offset-2 new-listing">
            <h3>Create new Listing</h3>
            <form class="needs-validation" action="/listings" method="post" novalidate>
                <div class="mb-2">
                    <label for="title" class="form-label">Title : </label>
                    <input type="text" name="listing[title]" id="title" class="form-control" placeholder="something catchy title" required>
                    <div class="invalid-feedback">Please provide a title</div>
                </div>
                <div class="mb-2">
                    <label for="url" class="form-label">Image-Url : </label>
                    <input type="text" name="listing[image][url]" class="form-control" id="url" placeholder="image.png" >
                </div>
                <div class="mb-2">
                    <label for="description" class="form-label">Description : </label>
                    <textarea name="listing[description]" id="description" placeholder="general description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please provide a description</div>
                </div>
                <div class="row">
                    <div class="mb-2 col-lg-4">
                        <label for="price"class="form-label">Price : </label>
                        <input type="number" name="listing[price]" class="form-control" id="price" placeholder="1200" required>
                        <div class="invalid-feedback">Please enter a price</div>
                    </div>
                    <div class="mb-2 col-lg-4">
                        <label for="location" class="form-label">Location : </label>
                        <input type="text" name="listing[location]" class="form-control" id="location" placeholder="Niagara" required>
                        <div class="invalid-feedback">Please provide a Location</div>
                    </div>
                    <div class="mb-2 col-lg-4 ">
                        <label for="country" class="form-label">Country : </label>
                        <input type="text" name="listing[country]" class="form-control" id="country" placeholder="Canada" required>
                        <div class="invalid-feedback">Please provide a country name</div>
                    </div>
                </div>
                    <a href="/listings" class="btn btn-dark cancel-btn">Cancel</a> &nbsp; &nbsp;
                    <button class="btn btn-primary submit-btn">Save</button>
            </form>
        </div>
    </div>
    <br><br>
</body>