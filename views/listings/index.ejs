<% layout('/layouts/boilerplate.ejs') %>
<body class="">
    <h3 class="mt-3">Popular homes in Canada ></h3>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 all-listings mb-2 mt-3">
        <%for (listing of all_listings) {%>
            <a class="card-link" href="/listings/<%= listing._id %>">
                <div class="card card-listing col border-bottom">
                    <img src="<%= listing.image.url %>" class="card-img-top listing-img" alt="listing_image">
                    <div class="card-body">
                    <h5 class="card-text"><%= listing.title %></h5>
                    <p class="card-text">&#36;<%= listing.price.toLocaleString("en-CA") %></p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>