<% layout("layouts/boilerplate.ejs") %>
<h3 class="col-6 offset-3 mt-3">Sign-up on Wanderlust</h3>

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="<%= baseUrl %>/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-2">
                    <label for="username" class="form-label">Username: </label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="Enter your username" required>
                    <div class="invalid-feedback">Please provide username</div>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-2">
                    <label for="email" class="form-label">Email: </label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter your username" required>
                    <div class="invalid-feedback">Please provide email</div>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-2">
                    <label for="password" class="form-label">Password: </label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required>
                    <div class="invalid-feedback">Please provide password</div>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <button class="btn btn-dark mt-2">Sign Up</button>
            </form>
        </div>
    </div>
